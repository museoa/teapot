#!/bin/sh

#s|\\fB\(\([^\]\|\\[^f]\)*\)\\fP|<code>\1</code>|g
# s|\\fI\(\([^\]\|\\[^f]\)*\)\\fP|<em>\1</em>|g
sed -e 's|\\\*V|<var>|g
s|\\\*v|</var>|g
s|\\\*C|<code>|g
s|\\\*c|</code>|g
s|\\\*A\(.*\)\\\*a|<a href="\1">\1</a>|g
s|\\\*E|<em>|g
s|\\\*e|</em>|g
s|\\\*K|<kbd>|g
s|\\\*k|</kbd>|g
s|\\-|-|g
s|\\(en|-|g
s|\\(-|-|g
s|\\s-\?[0-9]||g
s|\\d\([^\]*\)\\u|<sub>\1</sub>|g
s|\\u\([^\]*\)\\d|<sup>\1</sup>|g
s|\\&||g
s|\\\*F||g
s|\\e|\e|g
s|\\fB\(\([^\\]\)*\)\\fP|<code>\1</code>|g
s|\\fI\(\([^\\]\)*\)\\fP|<em>\1</em>|g
s|\\\\|\\|g
s|\e|\\|g
'
